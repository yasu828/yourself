  <div>
    <div class="icon-top">
      <%= image_tag 'modan.png', size: '72x72', class:'icontop' %>
    </div>
    <h1 class="text-center form-top">新規ユーザー登録</h1>
    <p class="form-signin">※全て必須項目となっております。</p>
  </div>
<%= form_with model: @user, url: new_user_registration_path, method: :post, class: 'form-signin', local: true do |f| %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム(最大20文字)</label>
    </div>
    <%= f.text_area :nickname, class:"form-control", id:"nickname", placeholder:"例) furima太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth'>
      <%= raw sprintf(
                  f.date_select(
                    :birth,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>
  <div class='register-btn'>
    <%= f.submit "ユーザー登録" ,class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>